<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
      layout="checkout">
    <head>
        <css src="Adyen_ExpressCheckout::css/amazonpay/order_review.css"/>
    </head>
    <body>
        <referenceContainer name="cart.summary">
            <block class="Adyen\ExpressCheckout\Block\Cart\OrderReview"
                   name="amazonpay.order.review"
                   template="Adyen_ExpressCheckout::amazonpay/cart/order_review.phtml"
                   after="checkout.cart.summary.title"
            />
        </referenceContainer>
    </body>
</page>
